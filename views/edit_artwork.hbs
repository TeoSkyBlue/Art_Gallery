<link rel="stylesheet" href="upload.css">
    <h1> Upload Image</h1>
    <form method = "post" action = "/edit_artwork?artwork_id={{artwork_id}}&image_id={{image_id}}" enctype="multipart/form-data">
        <label for="artist">Artist:</label>
        <select type="radio" id = 'artist' name="artist">
        {{#each artists}}
        <option value = "{{id}}" {{#if selected}} selected {{/if}}>{{first_name}} {{last_name}}</option>
        {{/each}}

        <label for="artwork-name">Artwork Name:</label>
        <input type="text" id="artwork-name" name="artwork_name" value = '{{name}}'>

        <label for="year">Creation Date:</label>
        <input type="date" id="year" name="year" value = {{date}}>

        <label for="genre">Genre:</label>
        <input type="text" id="genre" name="genre" value = "{{genre}}">

        <label for="summary">Short Summary:</label>
        <textarea id="summary" name="summary">{{summary}}</textarea>
        
        <p>Existing Artwork Image</p>
        <img id = 'artwork' class="card-img-top" src="data:{{img_type}};base64,{{ img_data }}" alt="{{ name }}">
        
        <input type = 'file' name = 'imageName'>
        <input type = 'submit'> 
    </form>