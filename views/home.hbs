<link rel="stylesheet" href="home_styles.css">
<script src="home_js.js" defer></script>

<div class="album py-4">
    <span class="rooms_slider" id="rooms_slider_id">
        <div class="border">
            <div class="img-slider">
                {{#each rooms}}
                <div class="slide">
                    <img src="data:{{rimg_type}};base64,{{ rimg }}" alt="{{rimg_name}}">
                    <div class="info">
                        <h2>ROOM {{room_num}}</h2>
                    </div>
                </div>
                {{/each}}

                <div class="navigation">
                    {{#each rooms}}
                    <div class="btn"></div>
                    {{/each}}
                </div>
                
            </div>
        </div>
    </span>
    <span class="announcements_section">
        <div class="border">
            <div class="row title">announcement 1</div>
            <div class="row w-100">
                <div class="col-lg-3 col-md-3 d-flex justify-content-center p-4">
                    <div class="image">
                        <img src="logo_circle.png" alt="Announcements photo" width="100%">
                        {{!-- μονη διαφορα με το announcement element ειναι η αποκατω γραμμη --}}
                        <div class="row p-3"><a href="/announcements">See more →</a></div>
                    </div>
                </div>
                <div class="col-lg-9 col-md-9 p-4">
                    <div class="info">Historians have done very well at</div>
                </div>
            </div>
        </div>
    </span> 
</div>
    