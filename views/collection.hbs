
<link rel="stylesheet" href="collection.css">
<script src="collection.js" defer></script>


<div class="container search py-2 w-auto">
      <div class="row">
        <div class="col">
          <div class="search-box row">
            <div class=""><input type="text" placeholder="search collection" id="search-box"></div>
          </div>
        </div>
        <div class="col">
          <div class="select-menu">
            <div class="select-btn">
              <span class="sBtn-text">Filters</span>
            </div>
            <ul class="options">
              <li class="option">
                  <span class="option-text">Github</span>
              </li>
              <li class="option">
                  <span class="option-text">Instagram</span>
              </li>
              <li class="option">
                <span class="option-text">Linkedin</span>
              </li>
              <li class="option">
                  <span class="option-text">Facebook</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>


    <div class=" h-100 w-auto album height-auto overflow-y-scroll py-5 bg-light">
        <div class="container">
          <div class="row">
            {{#each artworks}}
              <div class="col-md-4 d-flex align-items-stretch">
                <div class="card mb-4 box-shadow">
                  <img class="card-img-top" src="data:{{type}};base64,{{ img }}" alt="{{ type }}">
                  <div class="card-body text-truncate-container">
                    <p class="card-text mb-4">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                    <div class="d-flex justify-content-between align-items-center">
                      <div class="btn-group">
                        <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                        <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                      </div>
                      <small class="text-muted">9 mins</small>
                    </div>
                  </div>
                </div>
              </div>
              {{/each}}

          </div>
        </div>
    </div>
  