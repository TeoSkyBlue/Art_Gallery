<script src="exhibition.js" defer></script>
<link rel = "stylesheet" href = "exhibition.css">

<span class="rooms_slider" id="rooms_slider_id">
        <div class="border">
            <div class="img-slider">
                {{#each rooms}}
                <div class="slide">
                    <img src="data:{{rimg_type}};base64,{{ rimg }}" alt="{{rimg_name}}">
                    <div class="info">
                        <h2>ROOM {{room_num}}</h2>
                        <p>{{room_sum}}</p>
                    </div>
                </div>
                {{/each}}

                <div class="navigation">
                    {{#each rooms}}
                    <div class="btn"></div>
                    {{/each}}
                </div>
                
            </div>
        </div>
</span>

<div class="border">
    <div class="row d-flex align-items-center m-3">
        {{#each rooms}}
        <div class="card-content col-md-6 col-sm-6 mb-3 d-flex align-items-stretch">
            <div class="card box-shadow">
                <div class="card-image">
                    {{#if authenticated}}
                    <a class="btn btn-secondary edit" href = "./edit_room?roomid={{rid}}">Edit</a>
                    {{/if}}
                    <img class="card-img-top" src="data:{{rimg_type}};base64,{{ rimg }}" alt='{{rimg_name}}'>
                </div>
                <div class="room-text d-flex m-3">[Room {{room_num}}] {{room_genre}}: {{room_sum}} </div>
            </div>
        </div>
        {{/each}}
    </div>   
</div>